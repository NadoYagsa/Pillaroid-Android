<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:backgroundTint="#000000"
        android:contentDescription="필라로이드 텍스트 로고"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_text_logo" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="4">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_main_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_r7white_shadow"
            android:backgroundTint="#220BE6"
            android:drawableStart="@drawable/coding_camera_wh"
            android:drawablePadding="40dp"
            android:gravity="center_vertical"
            android:paddingStart="50dp"
            android:text="의약품 촬영으로 검색"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_main_voice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_r7white_shadow"
            android:backgroundTint="#620CF0"
            android:drawableStart="@drawable/coding_voice_wh"
            android:drawablePadding="40dp"
            android:gravity="center_vertical"
            android:paddingStart="50dp"
            android:text="의약품 음성으로 검색"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_main_prescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_r7white_shadow"
            android:backgroundTint="#AF19FF"
            android:drawableStart="@drawable/coding_prescription_wh"
            android:drawablePadding="40dp"
            android:gravity="center_vertical"
            android:paddingStart="50dp"
            android:text="처방전으로 검색"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_main_mypage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_r7white_shadow"
            android:backgroundTint="#DE0CF0"
            android:drawableStart="@drawable/coding_mypage_wh"
            android:drawablePadding="40dp"
            android:gravity="center_vertical"
            android:paddingStart="50dp"
            android:text="마이페이지"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
